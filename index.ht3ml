<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Synthetic Intelligence Crypto Breakout Predictor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        :root {
            --primary-bg: #0a0e17;
            --card-bg: #131a2c;
            --accent-color: #2962ff;
            --positive-color: #00c853;
            --negative-color: #ff1744;
        }
        body {
            background-color: var(--primary-bg);
            color: #e0e0e0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding-bottom: 20px;
        }
        .navbar {
            background: linear-gradient(90deg, #131a2c 0%, #0d111c 100%);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
        }
        .card {
            background-color: var(--card-bg);
            border-radius: 12px;
            border: 1px solid #2a3552;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px;
        }
        .card-header {
            border-bottom: 1px solid #2a3552;
            font-weight: 600;
        }
        .positive {
            color: var(--positive-color);
        }
        .negative {
            color: var(--negative-color);
        }
        .ticker-container {
            background: #0d111c;
            padding: 10px 0;
            overflow: hidden;
            white-space: nowrap;
            border-bottom: 1px solid #2a3552;
        }
        .ticker-item {
            display: inline-block;
            padding: 0 15px;
            font-size: 14px;
        }
        .coin-badge {
            font-weight: 600;
            background: rgba(41, 98, 255, 0.15);
            padding: 4px 10px;
            border-radius: 4px;
            margin-right: 5px;
        }
        .progress {
            height: 6px;
            background-color: #2a3552;
        }
        .breakout-prediction {
            border-left: 4px solid var(--positive-color);
            padding-left: 15px;
            margin: 15px 0;
        }
        .bearish-prediction {
            border-left: 4px solid var(--negative-color);
            padding-left: 15px;
            margin: 15px 0;
        }
        .monitored-coin {
            transition: all 0.3s ease;
        }
        .monitored-coin:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 20px rgba(0, 0, 0, 0.3);
        }
        .ai-status {
            background: rgba(0, 200, 83, 0.1);
            color: var(--positive-color);
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }
        .last-updated {
            font-size: 12px;
            color: #9e9e9e;
        }
        .chart-container {
            position: relative;
            height: 250px;
            width: 100%;
        }
        .influencer-tag {
            background: linear-gradient(45deg, #ff6b35, #f7931a);
            color: white;
            padding: 3px 8px;
            border-radius: 4px;
            font-size: 12px;
            margin-left: 5px;
        }
        .system-info {
            background: rgba(41, 98, 255, 0.1);
            border-radius: 8px;
            padding: 15px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="fas fa-brain"></i> Synthetic Intelligence Crypto Predictor
            </a>
            <div class="d-flex">
                <span class="ai-status">
                    <i class="fas fa-circle"></i> AI ACTIVE & SELF-HEALING
                </span>
            </div>
        </div>
    </nav>

    <!-- Ticker Bar -->
    <div class="ticker-container">
        <div class="ticker-scroll">
            <div id="ticker-items" class="d-inline-block">
                <!-- Ticker items will be populated by JavaScript -->
            </div>
        </div>
    </div>

    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Left Column -->
            <div class="col-md-8">
                <!-- Breakout Predictions -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-rocket"></i> Early Breakout Predictions</span>
                        <span class="last-updated">Last updated: <span id="prediction-update-time">Just now</span></span>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="breakout-prediction">
                                    <h5>WIF <span class="influencer-tag">Elon Mention</span></h5>
                                    <p>Predicted breakout: 48-72 hours</p>
                                    <p>Expected duration: 5-7 days</p>
                                    <p>Buy zone: $2.10 - $2.35</p>
                                    <p>Target: $3.80 - $4.20</p>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <small>Confidence: 75%</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="breakout-prediction">
                                    <h5>BONK <span class="influencer-tag">Trending</span></h5>
                                    <p>Predicted breakout: 12-24 hours</p>
                                    <p>Expected duration: 3-5 days</p>
                                    <p>Buy zone: $0.000021 - $0.000023</p>
                                    <p>Target: $0.000034 - $0.000039</p>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 68%" aria-valuenow="68" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <small>Confidence: 68%</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="breakout-prediction">
                                    <h5>FIL</h5>
                                    <p>Predicted breakout: 3-5 days</p>
                                    <p>Expected duration: 7-10 days</p>
                                    <p>Buy zone: $7.80 - $8.20</p>
                                    <p>Target: $12.50 - $14.00</p>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 82%" aria-valuenow="82" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <small>Confidence: 82%</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="bearish-prediction">
                                    <h5>TRX <span class="influencer-tag">Caution</span></h5>
                                    <p>Predicted downturn: 24-48 hours</p>
                                    <p>Expected duration: 4-6 days</p>
                                    <p>Sell zone: $0.125 - $0.135</p>
                                    <p>Target: $0.095 - $0.105</p>
                                    <div class="progress">
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: 65%" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <small>Confidence: 65%</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Monitored Altcoins -->
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-binoculars"></i> Monitored Altcoins
                    </div>
                    <div class="card-body">
                        <div class="row" id="monitored-coins">
                            <!-- Monitored coins will be populated by JavaScript -->
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-4">
                <!-- Market Overview -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-chart-pie"></i> Market Overview</span>
                        <span class="last-updated">Last updated: <span id="market-update-time">Just now</span></span>
                    </div>
                    <div class="card-body">
                        <h5>BTC Dominance: <span id="btc-dominance">52.8%</span></h5>
                        <div class="chart-container">
                            <canvas id="dominanceChart"></canvas>
                        </div>
                        <div class="mt-3">
                            <p>Total Market Cap: <span id="total-marketcap">$2.36T</span></p>
                            <p>24h Volume: <span id="total-volume">$108.4B</span></p>
                            <p>Fear & Greed Index: <span id="fear-greed">76 (Extreme Greed)</span></p>
                        </div>
                    </div>
                </div>

                <!-- Top Gainers -->
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-arrow-up"></i> Top Gainers (24h)
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush" id="top-gainers">
                            <!-- Top gainers will be populated by JavaScript -->
                        </ul>
                    </div>
                </div>

                <!-- Top Losers -->
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-arrow-down"></i> Top Losers (24h)
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush" id="top-losers">
                            <!-- Top losers will be populated by JavaScript -->
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- System Information -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-server"></i> System Information & Deployment
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Hardware Configuration</h5>
                                <div class="system-info">
                                    <p><strong>Primary Machine:</strong> Dell i7 Laptop</p>
                                    <ul>
                                        <li>Windows 10 Pro</li>
                                        <li>16GB RAM</li>
                                        <li>512GB SSD</li>
                                        <li>Python 3.9+</li>
                                    </ul>
                                    <p><strong>Secondary Machine:</strong> Asus i3 Laptop</p>
                                    <ul>
                                        <li>Ubuntu Server 24 LTS</li>
                                        <li>8GB RAM</li>
                                        <li>512GB SSD</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h5>Server Configuration</h5>
                                <div class="system-info">
                                    <p><strong>Afrihost Server Package</strong></p>
                                    <ul>
                                        <li>2GB Storage Space</li>
                                        <li>50 Email Accounts</li>
                                        <li>SQL Database</li>
                                    </ul>
                                    <p><strong>Deployment Notes:</strong></p>
                                    <ul>
                                        <li>Frontend: HTML/CSS/JS</li>
                                        <li>Backend API: Python/Flask</li>
                                        <li>Database: SQLite/MySQL</li>
                                        <li>Scheduled tasks: Cron jobs (Linux) / Task Scheduler (Windows)</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="text-center p-4 mt-4">
        <p class="mb-0">Synthetic Intelligence Crypto Breakout Prediction System • Self-healing AI • Continuous Monitoring</p>
        <p class="last-updated">System version: 2.3.1 | Last self-update: <span id="system-update-time">Today, 14:32 UTC</span></p>
    </footer>

    <script>
        // API Keys (in a real application, these should be secured)
        const CMC_API_KEY = '1166d943-7350-4996-88ae-0f842df38fde';
        const CG_API_KEY = 'CG-x4bnFrr8oQr3uoMV6Uxi7JLs';
        const NEWS_API_KEY = 'f5f7faf106e34673ac7e30827f5f8534';

        // Initialize with mock data (in a real app, this would fetch from APIs)
        document.addEventListener('DOMContentLoaded', function() {
            updateTicker();
            updateMonitoredCoins();
            updateMarketOverview();
            updateGainersLosers();
            initializeCharts();
            
            // Set up periodic updates
            setInterval(updateAllData, 60000); // Update every minute
            setInterval(updateTimestamps, 30000); // Update timestamps every 30 seconds
        });

        function updateAllData() {
            updateTicker();
            updateMonitoredCoins();
            updateMarketOverview();
            updateGainersLosers();
        }

        function updateTimestamps() {
            const now = new Date();
            document.getElementById('prediction-update-time').textContent = now.toLocaleTimeString();
            document.getElementById('market-update-time').textContent = now.toLocaleTimeString();
        }

        function updateTicker() {
            const tickerItems = document.getElementById('ticker-items');
            const coins = [
                { symbol: 'BTC', price: '$67,423.45', change: 2.35 },
                { symbol: 'ETH', price: '$3,512.67', change: 1.82 },
                { symbol: 'BNB', price: '$585.23', change: 0.93 },
                { symbol: 'SOL', price: '$175.89', change: 5.21 },
                { symbol: 'XRP', price: '$0.5321', change: -0.75 },
                { symbol: 'ADA', price: '$0.4623', change: 1.25 },
                { symbol: 'DOGE', price: '$0.1589', change: 3.42 },
                { symbol: 'DOT', price: '$7.23', change: -1.05 },
                { symbol: 'WIF', price: '$2.28', change: 12.53 },
                { symbol: 'FIL', price: '$8.12', change: 4.26 },
                { symbol: 'BONK', price: '$0.0000227', change: 8.91 },
                { symbol: 'XMR', price: '$170.25', change: 1.37 },
                { symbol: 'TRX', price: '$0.1289', change: -2.14 }
            ];

            tickerItems.innerHTML = '';
            coins.forEach(coin => {
                const changeClass = coin.change >= 0 ? 'positive' : 'negative';
                const changeIcon = coin.change >= 0 ? '▲' : '▼';
                
                const tickerItem = document.createElement('div');
                tickerItem.className = 'ticker-item';
                tickerItem.innerHTML = `
                    <span class="coin-badge">${coin.symbol}</span>
                    <span>${coin.price}</span>
                    <span class="${changeClass}">${changeIcon} ${Math.abs(coin.change)}%</span>
                `;
                
                tickerItems.appendChild(tickerItem);
            });
        }

        function updateMonitoredCoins() {
            const monitoredCoinsContainer = document.getElementById('monitored-coins');
            const coins = [
                { symbol: 'WIF', name: 'dogwifhat', price: '$2.28', change: 12.53, volume: '$425M', prediction: 'Bullish' },
                { symbol: 'FIL', name: 'Filecoin', price: '$8.12', change: 4.26, volume: '$318M', prediction: 'Bullish' },
                { symbol: 'BONK', name: 'Bonk', price: '$0.0000227', change: 8.91, volume: '$205M', prediction: 'Bullish' },
                { symbol: 'ADA', name: 'Cardano', price: '$0.4623', change: 1.25, volume: '$562M', prediction: 'Neutral' },
                { symbol: 'XMR', name: 'Monero', price: '$170.25', change: 1.37, volume: '$78M', prediction: 'Neutral' },
                { symbol: 'TRX', name: 'Tron', price: '$0.1289', change: -2.14, volume: '$342M', prediction: 'Bearish' }
            ];

            monitoredCoinsContainer.innerHTML = '';
            coins.forEach(coin => {
                const changeClass = coin.change >= 0 ? 'positive' : 'negative';
                const predictionClass = coin.prediction === 'Bullish' ? 'positive' : 
                                      (coin.prediction === 'Bearish' ? 'negative' : '');
                
                const col = document.createElement('div');
                col.className = 'col-md-6 col-lg-4';
                col.innerHTML = `
                    <div class="card monitored-coin">
                        <div class="card-body">
                            <h5 class="card-title">${coin.symbol} <span class="${predictionClass}">(${coin.prediction})</span></h5>
                            <h6 class="card-subtitle mb-2 text-muted">${coin.name}</h6>
                            <p class="card-text">Price: ${coin.price}</p>
                            <p class="card-text">24h Change: <span class="${changeClass}">${coin.change}%</span></p>
                            <p class="card-text">Volume: ${coin.volume}</p>
                            <a href="#" class="btn btn-sm btn-outline-primary">View Analysis</a>
                        </div>
                    </div>
                `;
                
                monitoredCoinsContainer.appendChild(col);
            });
        }

        function updateMarketOverview() {
            // In a real application, this would fetch from the CoinMarketCap API
            document.getElementById('btc-dominance').textContent = '52.8%';
            document.getElementById('total-marketcap').textContent = '$2.36T';
            document.getElementById('total-volume').textContent = '$108.4B';
            document.getElementById('fear-greed').textContent = '76 (Extreme Greed)';
        }

        function updateGainersLosers() {
            const gainers = [
                { symbol: 'WIF', price: '$2.28', change: 12.53 },
                { symbol: 'BONK', price: '$0.0000227', change: 8.91 },
                { symbol: 'PEPE', price: '$0.00000812', change: 7.65 },
                { symbol: 'SOL', price: '$175.89', change: 5.21 },
                { symbol: 'FIL', price: '$8.12', change: 4.26 }
            ];

            const losers = [
                { symbol: 'LUNC', price: '$0.000112', change: -5.32 },
                { symbol: 'TRX', price: '$0.1289', change: -2.14 },
                { symbol: 'XRP', price: '$0.5321', change: -0.75 },
                { symbol: 'DOT', price: '$7.23', change: -1.05 },
                { symbol: 'ATOM', price: '$9.87', change: -0.89 }
            ];

            const gainersList = document.getElementById('top-gainers');
            const losersList = document.getElementById('top-losers');

            gainersList.innerHTML = '';
            losersList.innerHTML = '';

            gainers.forEach(coin => {
                const li = document.createElement('li');
                li.className = 'list-group-item d-flex justify-content-between align-items-center';
                li.innerHTML = `
                    <span>${coin.symbol}</span>
                    <span>${coin.price}</span>
                    <span class="positive">+${coin.change}%</span>
                `;
                li.style.background = 'transparent';
                gainersList.appendChild(li);
            });

            losers.forEach(coin => {
                const li = document.createElement('li');
                li.className = 'list-group-item d-flex justify-content-between align-items-center';
                li.innerHTML = `
                    <span>${coin.symbol}</span>
                    <span>${coin.price}</span>
                    <span class="negative">${coin.change}%</span>
                `;
                li.style.background = 'transparent';
                losersList.appendChild(li);
            });
        }

        function initializeCharts() {
            // BTC Dominance Chart
            const dominanceCtx = document.getElementById('dominanceChart').getContext('2d');
            new Chart(dominanceCtx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    datasets: [{
                        label: 'BTC Dominance %',
                        data: [48.2, 49.5, 51.3, 53.1, 50.8, 52.4, 54.2, 52.7, 51.9, 52.3, 52.8, 52.5],
                        borderColor: '#2962ff',
                        backgroundColor: 'rgba(41, 98, 255, 0.1)',
                        tension: 0.3,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#e0e0e0'
                            }
                        },
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#e0e0e0'
                            }
                        }
                    }
                }
            });
        }

        // Simulate AI self-updating
        setInterval(() => {
            const updateTime = new Date().toLocaleString();
            document.getElementById('system-update-time').textContent = updateTime;
            
            // Simulate AI learning and improving predictions
            const confidenceBars = document.querySelectorAll('.progress-bar');
            confidenceBars.forEach(bar => {
                const currentWidth = parseInt(bar.style.width);
                const change = Math.random() * 5 - 2; // Random change between -2 and +3
                let newWidth = currentWidth + change;
                
                // Keep between 50% and 95%
                newWidth = Math.max(50, Math.min(95, newWidth));
                
                bar.style.width = `${newWidth}%`;
                bar.setAttribute('aria-valuenow', newWidth);
                bar.parentElement.nextElementSibling.textContent = `Confidence: ${Math.round(newWidth)}%`;
            });
        }, 120000); // Update every 2 minutes
    </script>
</body>
</html>
